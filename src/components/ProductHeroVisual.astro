---
type Props = {
  title: string;                 // 右側のテキスト（今は "Text" 固定でOK）
  partsImg?: string;             // 右上のパーツ画像
  underlineSvg?: string;         // 右側のアンダーラインSVG
  bikeImg?: string;              // 左側のバイク画像
};

const {
  title,
  partsImg = "/images/lineup/product/img-parts.png",
  underlineSvg = "/images/lineup/product/underline.svg",
  bikeImg = "/images/lineup/product/img-mortorbike.png",
} = Astro.props as Props;
---

<section class="phv-wrap">
  <!-- 左：バイク -->
  <div class="phv-bike">
    <img src={bikeImg} alt="" class="phv-bike-img" />
  </div>

  <!-- 右：パーツ画像 → テキスト → underline.svg -->
  <div class="phv-right">
    <img src={partsImg} alt="" class="phv-parts-img" />

    <div class="phv-title">{title}</div>

    <img src={underlineSvg} alt="" class="phv-underline" />
  </div>
</section>

<style>
  .phv-wrap{
    width: 1206px;
    height: 459px;
    margin: 0 auto;
    display: flex;
    gap: 80px;
    position: relative;
  align-items: flex-start; /* ← これが重要：上揃えにする */
  }

  .phv-bike{
    width: 631px;
    height: 415.8864px;
    padding: 0 0.8px;
    display: flex;
    align-items: center;
    justify-content: center;
  }
  .phv-bike-img{
    width: 100%;
    height: 100%;
    object-fit: contain;
    display: block;
    transform: translateY(50px);
  }

  .phv-right{
    flex: 1;
    min-width: 0;
    display: flex;
    flex-direction: column;       /* ← 画像→テキスト→アンダーライン */
    align-items: flex-start;       /* デザイン的に左寄せ */
    gap: 12px;
    margin-top: 0;
  }

  .phv-parts-img{
    width: 330px;                 /* ここはデザインに合わせて微調整OK */
    height: auto;
    display: block;
  }

  .phv-title{
    font-family: "Noto Sans JP", sans-serif;
    font-weight: 700;
    font-size: 23.95px;
    line-height: 1;
    letter-spacing: 0px;
    color: #fff;
  }

  .phv-underline{
    width: 598px;                 /* デザイン指定の線幅に合わせる */
    height: auto;
    display: block;
    margin-top: 6px;                 /* 縦位置の微調整 */
    transform: translateX(-165px) translateY(-80px);
  }

  /* 画面が狭い時の崩れ防止（必要なら） */
  @media (max-width: 1300px){
    .phv-wrap{
      width: 100%;
      height: auto;
      padding: 0 24px;
      flex-direction: column;
      align-items: center;
    }
    .phv-bike{ width: 100%; max-width: 631px; height: auto; }
    .phv-bike-img{ height: auto; }
    .phv-right{ align-items: center; }
    .phv-underline{ width: min(598px, 100%); }
  }
</style>
