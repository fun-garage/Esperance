---
import BaseLayout from "../../layouts/BaseLayout.astro";
import PageHero from "../../components/PageHero.astro";
import "../../styles/contact.css";
---

<BaseLayout title="Contact | Esperance" lang="en">
  <PageHero eyebrow="GET IN TOUCH" title="CONTACT" />

  <section class="bg-[#050505]">
    <div class="mx-auto max-w-[1440px] px-[24px] pb-[140px]">
      <section class="contact-form" aria-label="Contact form">
        <div class="contact-form-inner">
          <!-- Left -->
          <div class="contact-left">
            <h2 class="contact-lead">START YOUR LEGEND HERE.</h2>

            <p class="contact-note">
              Please feel free to contact us regarding<br />
              product questions, mold manufacturing<br />
              requests, or media inquiries. We also accept<br />
              orders for overseas shipping and custom<br />
              prototypes.
            </p>

            <div class="contact-info">
              <div class="contact-info-row">
                <div class="contact-info-label">ADDRESS</div>
                <div class="contact-info-value">
                  1191-7<br />
                  Fujigaya, Kashiwa, Chiba 277-0931, Japan
                </div>
              </div>

              <div class="contact-info-row">
                <div class="contact-info-label">EMAIL</div>
                <div class="contact-info-value">info@sn-kanagata.co.jp</div>
              </div>

              <div class="contact-info-row">
                <div class="contact-info-label">PHONE</div>
                <div class="contact-info-value">04-7190-0515</div>
              </div>
            </div>
          </div>

          <!-- Right -->
          <div class="contact-right">
            <form class="contact-fields" method="post" action="#">
              <div class="field">
                <label class="field-label" for="name">
                  NAME <span class="field-req">*</span>
                </label>
                <input
                  id="name"
                  name="name"
                  type="text"
                  class="field-input"
                  placeholder="Your Name"
                  required
                />
              </div>

              <div class="field">
                <label class="field-label" for="email">
                  EMAIL ADDRESS <span class="field-req">*</span>
                </label>
                <input
                  id="email"
                  name="email"
                  type="email"
                  class="field-input"
                  placeholder="example@domain.com"
                  required
                />
              </div>

              <div class="field">
                <label class="field-label" for="subject">
                  SUBJECT
                </label>
                <div class="select-wrap">
                  <select id="subject" name="subject" class="field-select">
                    <option value="about-products" selected>
                      About Products
                    </option>
                    <option value="manufacturing">Manufacturing</option>
                    <option value="media">Media</option>
                    <option value="other">Other</option>
                  </select>
                </div>
              </div>

              <div class="field">
                <label class="field-label" for="message">
                  MESSAGE <span class="field-req">*</span>
                </label>
                <textarea
                  id="message"
                  name="message"
                  class="field-textarea"
                  placeholder="How can we help you?"
                  required
                ></textarea>
              </div>

              <button type="submit" class="contact-submit">
                SEND MESSAGE
              </button>
            </form>
          </div>
        </div>
      </section>
    </div>
  </section>
</BaseLayout>
